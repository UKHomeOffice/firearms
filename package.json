{
  "name": "firearms",
  "version": "0.1.0",
  "main": "app.js",
  "description": "Firearms application service",
  "author": "HomeOffice",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/firearms"
  },
  "license": "./LICENSE",
  "readme": "./README.md",
  "scripts": {
    "start": "node .",
    "dev": "hof-build watch --config ./hof-build.config.js",
    "test": "NODE_ENV=test npm run lint && npm run test:unit",
    "test:unit": "istanbul cover _mocha",
    "test:acceptance": "funkie so-acceptance --steps",
    "lint": "npm-run-all --parallel lint:app lint:acceptance",
    "lint:app": "eslint .",
    "lint:acceptance": "eslint --no-ignore -c ./node_modules/so-acceptance/.eslintrc ./apps/*/features/**/*.js",
    "prepareapp": "hof-build --config ./hof-build.config.js",
    "postinstall": "bash -c 'if [[ ${NODE_ENV} != production ]]; then npm run prepareapp; fi;'"
  },
  "dependencies": {
    "busboy-body-parser": "^0.3.0",
    "express": "^4.14.1",
    "hof-bootstrap": "^10.3.0",
    "hof-build": "^1.0.1",
    "hof-confirm-controller": "^1.0.2",
    "hof-controllers": "^6.0.2",
    "hof-form-controller": "^4.0.0",
    "hof-frontend-toolkit": "^1.1.0",
    "hof-middleware-markdown": "^1.0.0",
    "hof-model": "^3.0.0",
    "html-pdf": "^2.1.0",
    "jquery": "^2.1.4",
    "lodash": "^4.17.4",
    "typeahead-aria": "^1.0.4",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "chai-as-promised": "^6.0.0",
    "eslint-config-homeoffice": "^2.0.0",
    "express": "^4.14.0",
    "funkie": "0.0.5",
    "funkie-phantom": "0.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^1.7.0",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "reqres": "^1.2.2",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0",
    "so-acceptance": "^4.3.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
