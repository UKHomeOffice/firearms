{
  "name": "firearms",
  "version": "0.1.0",
  "main": "app.js",
  "description": "Firearms application service",
  "author": "HomeOffice",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/firearms"
  },
  "license": "./LICENSE",
  "readme": "./README.md",
  "scripts": {
    "start": "node .",
    "dev": "npm-run-all --parallel watch:app watch:scss watch:js",
    "watch:app": "NODE_ENV=development nodemon -x 'npm run hof-transpile && npm start' --ignore 'apps/**/translations/en/'",
    "watch:scss": "nodemon -e scss -x 'npm run sass'",
    "watch:js": "nodemon --watch assets/js -e js -x 'npm run browserify'",
    "test": "NODE_ENV=test npm run lint && npm run test:unit",
    "test:unit": "istanbul cover _mocha",
    "test:acceptance": "funkie so-acceptance --steps",
    "lint": "npm-run-all --parallel lint:app lint:acceptance",
    "lint:app": "eslint .",
    "lint:acceptance": "eslint --no-ignore -c ./node_modules/so-acceptance/.eslintrc ./apps/*/features/**/*.js",
    "copy:images": "cp -r ./assets/images ./public/",
    "browserify": "browserify ./assets/js/index.js > ./public/js/bundle.js",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "sass": "npm-sass ./assets/scss/app.scss > ./public/css/app.css",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./apps/common/translations/src --shared ./node_modules/hof-template-partials/translations",
    "prepareapp": "npm run create:public; npm run sass; npm run browserify; npm run copy:images; npm run hof-transpile",
    "postinstall": "bash -c 'if [[ ${NODE_ENV} != production ]]; then npm run prepareapp; fi;'"
  },
  "dependencies": {
    "browserify": "^12.0.1",
    "busboy-body-parser": "^0.3.0",
    "express": "^4.14.1",
    "hof-bootstrap": "^9.0.1",
    "hof-controllers": "^6.0.2",
    "hof-confirm-controller": "^1.0.1",
    "hof-frontend-toolkit": "^1.0.1",
    "hof-model": "^2.1.0",
    "hof-transpiler": "^0.2.1",
    "jquery": "^2.1.4",
    "lodash": "^4.17.4",
    "npm-sass": "^2.0.0",
    "typeahead-aria": "^1.0.4",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "chai-as-promised": "^6.0.0",
    "eslint-config-homeoffice": "^2.0.0",
    "express": "^4.14.0",
    "funkie": "0.0.4",
    "funkie-phantom": "0.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^1.7.0",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "reqres": "^1.2.2",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0",
    "so-acceptance": "^4.2.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
