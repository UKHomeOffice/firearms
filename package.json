{
  "name": "hof-boilerplate",
  "version": "0.1.0",
  "main": "app.js",
  "description": "Boilerplate for a HOF service",
  "author": "HomeOffice",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/hof-boilerplate"
  },
  "license": "./LICENSE",
  "readme": "./README.md",
  "scripts": {
    "start": "node .",
    "dev": "npm-run-all --parallel watch:app watch:scss watch:js watch:translations",
    "watch:app": "NODE_ENV=development nodemon .",
    "watch:scss": "nodemon -e scss -x 'npm run sass'",
    "watch:js": "nodemon --watch assets/js -e js -x 'npm run browserify'",
    "watch:translations": "nodemon --watch apps/**/translations/src -x 'npm run hof-transpile'",
    "test": "NODE_ENV=test mocha",
    "test:ci": "npm run lint && npm run style && npm run test",
    "lint": "eslint .",
    "style": "jscs **/*.js --config=./.jscsrc",
    "copy:images": "cp -r ./assets/images ./public/",
    "cover": "istanbul cover _mocha && istanbul check-coverage",
    "browserify": "browserify ./assets/js/index.js > ./public/js/bundle.js",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "sass": "node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./apps/common/translations/src",
    "postinstall": "npm run create:public; npm run sass; npm run browserify; npm run copy:images; npm run hof-transpile"
  },
  "dependencies": {
    "body-parser": "^1.13.0",
    "browserify": "^12.0.1",
    "churchill": "0.0.5",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.4",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.11.3",
    "hof-bootstrap": "^0.1.1",
    "hof-dotfiles": "^2.0.0",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "i18n-lookup": "^0.1.0",
    "jquery": "^2.1.4",
    "lodash": "3.0.1",
    "node-sass": "^3.7.0",
    "redis": "^0.12.1",
    "winston": "^1.0.1",
    "hof-transpiler": "0.0.4"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "debug": "^2.2.0",
    "istanbul": "^0.4.3",
    "jscs": "^3.0.6",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "nodemon": "^1.9.2",
    "npm-run-all": "^1.7.0",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test",
    "cover"
  ]
}
