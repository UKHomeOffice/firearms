FROM node:5

WORKDIR /test

COPY package.json package.json
COPY codecept.conf.js codecept.conf.js
COPY config.js config.js
COPY assets/countries/index.js assets/countries/index.js
COPY mock-postcode.js mock-postcode.js
COPY apps apps/
