FROM node:10.11-alpine

USER root

# Update packages as a result of Anchore security vulnerability checks
RUN apk update && \
    apk add --upgrade gnutls binutils nodejs nodejs-npm apk-tools libjpeg-turbo libcurl libx11 libxml2

# Setup nodejs group & nodejs user
RUN addgroup --system nodejs --gid 998 && \
    adduser --system nodejs --uid 999 --home /app/ && \
    chown -R 999:998 /app/

USER 999

WORKDIR /test

COPY --chown=999:998 package.json package.json
COPY --chown=999:998 yarn.lock yarn.lock
COPY --chown=999:998 codecept.conf.js codecept.conf.js
COPY --chown=999:998 config.js config.js
COPY --chown=999:998 apps apps/

RUN yarn install --frozen-lockfile --production --ignore-optional && \
    yarn run postinstall

CMD npm run test:acceptance
